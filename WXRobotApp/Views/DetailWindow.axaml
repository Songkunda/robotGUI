<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="400"
    Height="300"
    Title="WeChat Details"
    xmlns:vm="using:WXRobotApp.ViewModels"
    x:Class="WXRobotApp.Views.DetailWindow"
    x:DataType="vm:DetailWindowViewModel">
    <StackPanel Margin="10">
        <TextBlock Text="Details of WeChat Process"
            FontWeight="Bold"
            Margin="0,0,0,10" />
        <TextBlock Text="{Binding SelectedProcessInfo.Pid}" />
        <TextBlock Text="{Binding SelectedProcessInfo.MessagePort}" />
        <TextBlock Text="{Binding SelectedProcessInfo.WeChatVersion}" />
    </StackPanel>
</Window>