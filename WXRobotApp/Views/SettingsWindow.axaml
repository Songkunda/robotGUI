<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WXRobotApp.Views.SettingsWindow"
    Width="300"
    Height="200"
    Title="Settings">
    <StackPanel>
        <TextBlock Text="Configuration Settings"
            Margin="10" />
        <TextBox Name="ConfigTextBox"
            Margin="10"
            AcceptsReturn="True"
            Height="100" />
        <Button Content="Save"
            HorizontalAlignment="Right"
            Margin="10"
            Click="OnSaveClick" />
    </StackPanel>
</Window>